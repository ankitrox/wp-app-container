{
    "name": "inpsyde/wp-app-container",
    "type": "library",
    "description": "DI Container and related tools to be used at website level.",
    "license": "General Inpsyde License V1.0",
    "authors": [
        {
            "name": "Inpsyde GmbH",
            "homepage": "https://inpsyde.com/",
            "email": "hello@inpsyde.com",
            "role": "Company"
        },
        {
            "name": "Giuseppe Mazzapica",
            "email": "g.mazzapica@inpsyde.com",
            "role": "Developer"
        }
    ],
    "require": {
        "pimple/pimple": "^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "3.4.*",
        "inpsyde/php-coding-standards": "0.*",
        "vimeo/psalm": "@stable",
        "brain/monkey": "^2",
        "roots/wordpress": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Inpsyde\\App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Inpsyde\\App\\Tests\\": "tests/phpunit/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "qa": [
            "sh ./vendor/bin/phpcs",
            "sh ./vendor/bin/psalm",
            "sh ./vendor/bin/phpunit"
        ]
    },
    "extra": {
        "wordpress-install-dir": "vendor/roots/wordpress"
    }
}
